  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "runtimeExecutable": "node",
      "args": [
        "--query=author:author-name"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}